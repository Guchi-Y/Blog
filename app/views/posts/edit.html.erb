<div class="contents">
  <h1>とうこうをへんしゅう</h1>
  <%= form_for(@post, url: posts_path) do |f| %>
    <%= f.text_area :text, style: 'width: 100%; height: 300px;' %>
    <%= f.hidden_field :id, :value => @post.id %>
    <% if current_user.id == @post.user_id %>
      <%= f.submit :class => "button", :value => "かんりょう" %>
    <% end %>
  <% end %>
</div>