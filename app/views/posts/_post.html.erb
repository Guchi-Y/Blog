<div class="post_area">
  <%= simple_format(post.text) %>
  <% if user_signed_in? && current_user.id == post.user_id %>
    <div class="post_button">
      <%= link_to "へんしゅう", "/posts/#{post.id}/edit", method: :get, remote: true, class: "button" %>
      <%= link_to 'さくじょ', "/posts/#{post.id}", method: :delete, class: "delete_button" %>
    </div>
  <% end %>
</div>